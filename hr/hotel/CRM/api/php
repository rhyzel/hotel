<?php
include 'db.php';

$id = $_POST['id'];
$status = $_POST['status'];
$comment = $_POST['comment'];

$stmt = $pdo->prepare("UPDATE complaints SET status=?, comment=? WHERE id=?");
echo $stmt->execute([$status, $comment, $id]) ? "ok" : "error";
?>
